///
/// \brief Extract Packet Keys to an output file
///
GetPacketKeys = function()
{
	/// 1.1 - Need a valid Exe loaded.
	if (Exe.FileSize == 0)
		throw NO_EXE;

	/// 1.2 - Ensure PACKET Object is loaded
	PACKET.load();

	/// 2.1 - Open the output file for writing.
	let fileName = Exe.GetUserInput("$$keyOutput", D_OutFile, "Target File", "Enter the target file path", OUTDIR + "PacketKeys_" + ROC.BaseName + ".txt");
	if (fileName === false)
		return true;

	let fp = new TextFile(fileName, 'w');
	if (!fp.Valid)
		throw NO_OUTPUT;

	/// 2.2 - Retrieve the packet keys found and convert to hex
	let keys = [];
	PACKET.Keys.forEach( (val, idx) =>
	{
		keys[idx] = "0x" + val.toHex(true)
	});

	/// 2.3 - Write the essentials & the keys in hex to the file.
	fp.WriteLine("Extracted with WARP")
	fp.WriteLine("===================")
	fp.WriteLine("Client: " + Exe.FilePath);
	fp.WriteLine("BuildDate: " + Exe.BuildDate);
	fp.WriteLine("Packet Keys : (" + keys.join(', ') + ")");

	/// 2.4 - Close the file
	fp.Close();

	/// 3 - Show the success message or display the file requested
	if (!Exe.TestMode && Exe.GetUserInput('$$showFile', D_Bool, "Show File", "Display the generated file?", true))
	{
		Warp.Show(fp.Path);
		return true;
	}
	else
	{
		return "Packet Keys have been extracted";
	}
};